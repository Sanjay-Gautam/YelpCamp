<% layout('./layout/boilerplate')%>
<div id="map" style="width:100%;height:300px">
</div>
        <h1>Here are all the Campgrounds!</h1>
        <hr>
        
            <% for(camp of camps){%>
               <div class="card mb-3">
                   <div class="row">
                       <div class="col-md-4">
                           <img src="<%=camp.images[0].url%>" class='img-fluid'>
                        </div>
                        <div class="col-md-8">
                            <div class='card-body'>
                                <h5 class="card-title"><%=camp.title%></h5>
                                <p class="card-text"><%=camp.description%></p>
                                <p class="card-text">
                                    <small class="text-muted">Location - <%=camp.location%></small>
                                </p>
                                <a href="/index/<%=camp._id%>" class="btn btn-outline-primary"><%=camp.title%></a>
                            </div>
                        </div>
                           
                   </div>

               </div>
                
            <%}%>    
        

<!-- script to send mapbox token and all campgrounds-->
<script>
    const token = '<%-process.env.MAPBOX_TOKEN%>';

    //we are including all data inside a key called feature because that's where cluster map will look for data
    const campgrounds = {features:<%-JSON.stringify(camps)%>};
</script>
